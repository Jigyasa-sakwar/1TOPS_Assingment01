`timescale 1ns / 1ps

module barrelshift(
input [15:0]data_in,
input wire [2:0]select,
input wire [3:0]shift,
output reg [15:0]data_out);

always @(*)begin
case(select)

3'b000 : data_out = data_in >> shift;
3'b001 : data_out = data_in << shift;
3'b010 : data_out = $signed(data_in) >>> shift;
3'b011 : data_out = (data_in >> shift) | (data_in <<(16 - shift));
default : data_out = data_in;

endcase
end
endmodule
